<head>
    <meta charset="UTF-8">
    <title>Product add</title>
    <link href="css/styles.css" rel="stylesheet" type="text/css">
    <script src="/jQuery/jquery-3.6.0.min.js"></script>
</head>

<body>
    <div class='container'>
        <h1>Product add</h1>
        <button name="button">Save</button>
        <form action="/php/delete_items.php" method="POST">
            <button name="button">Cansel</button>
        </form>
        <hr>
        <form method="POST" id ="product_form">
            <p>SKY<input type="text" id ="sku" name="sku" /></p>
            <p>Name<input type="text" id ="name" name="name" /></p>
            <p>Price ($)<input type="text" id ="price"name="price" /></p>
            Type Switcher <select id="productType" size="1">
                <option value="dvd">DVD</option>
                <option value="book">Book</option>
                <option value="furniture">Furniture</option>
            </select>
        <div class="attributes" id="attributesItem">
        </div>
    </form>

    <script>
        $(function() {
            $('#productType').on('change', function() {
                 var value = $(this).val();
                switch(value){
                case 'dvd':
                    $('#attributesItem').text("");
                    $('#attributesItem').append("Size (MB)<input type='text' id='size'>");
                break;
                case 'book':
                    $('#attributesItem').text("");
                    $('#attributesItem').append("Weight (KG)<input type='text' id='weight'>");
                break;
                case 'furniture':
                    $('#attributesItem').text("");
                    $('#attributesItem').append("Height (CM)<input type='text' id='height'><br />");
                    $('#attributesItem').append("Width (CM)<input type='text' id='width'><br />");
                    $('#attributesItem').append("Lenght (CM)<input type='text' id='length'><br />");
                break;
                
                } 

                //$('#attributesItem').text(<input type='text' id='size'>);
            });
        });
    </script>
    </div>
</body>

</html>