<!doctype html>
<html lang="ru">

<head>
    <meta charset="UTF-8">
    <title>Product add</title>
    <link href="css/styles.css" rel="stylesheet" type="text/css">
    <script src="/jQuery/jquery-3.6.0.min.js"></script>
</head>

<body>
    <div class='container'>
        <h1>Product add</h1>
        <form action="/php/save.php" method="POST" id="product_form">
            <button name="save" >Save</button>
            <button name="cansel" >Cansel</button>
        <hr>
            <p>SKY<input type="text" id="sku" name="sku" /></p>
            <p>Name<input type="text" id="name" name="name" /></p>
            <p>Price ($)<input type="text" id="price" name="price" /></p>
            Type Switcher <select name="productType" id="productType"size="1">
                <option value="">Type Switcher</option>
                <option value="disc">DVD</option>
                <option value="book">Book</option>
                <option value="furniture">Furniture</option>
            </select>
            <div class="attributes" id="attributesItem">
            </div>
        </form>

        <script>
            $(function () {
                $('#productType').on('change', function () {
                    var value = $(this).val();
                    $('#attributesItem').text("");
                    switch (value) {
                        case 'disc':
                            $('#attributesItem').append("Size (MB)<input type='text' name='size' id='size'>");
                            break;
                        case 'book':
                            $('#attributesItem').append("Weight (KG)<input type='text' name='weight' id='weight'>");
                            break;
                        case 'furniture':
                            $('#attributesItem').append("Height (CM)<input type='text' name='height' id='height'><br />");
                            $('#attributesItem').append("Width (CM)<input type='text' name='width' id='width'><br />");
                            $('#attributesItem').append("Lenght (CM)<input type='text' name='length' id='length'><br />");
                            break;
                    }
                });
            });
        </script>
    </div>
</body>

</html>